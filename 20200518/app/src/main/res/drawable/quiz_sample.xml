<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">

            <solid
                android:color="@color/colorAccent"
                />

        </shape>

    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        >
        <shape  android:shape="rectangle">

            <solid
                android:color="@color/colorAccent"
                />


            <stroke
                android:color="@android:color/white"
                android:width="3dp"
                />
        </shape>

    </item>

</layer-list>